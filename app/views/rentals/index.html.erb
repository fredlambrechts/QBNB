<p id="notice"><%= notice %></p>

<h1>Listing Rentals</h1>

<table>
  <thead>
    <tr>
      <th>Host</th>
      <th>Name</th>
      <th>Address street</th>
      <th>Address number</th>
      <th>Address city</th>
      <th>Address country</th>
      <th>Address zip</th>
      <th>Rental type</th>
      <th>Number of sleeps</th>
      <th>Price per night</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rentals.each do |rental| %>
      <tr>
        <td><%= rental.host_id %></td>
        <td><%= rental.name %></td>
        <td><%= rental.address_street %></td>
        <td><%= rental.address_number %></td>
        <td><%= rental.address_city %></td>
        <td><%= rental.address_country %></td>
        <td><%= rental.address_zip %></td>
        <td><%= rental.rental_type %></td>
        <td><%= rental.number_of_sleeps %></td>
        <td><%= rental.price_per_night %></td>
        <td><%= rental.description %></td>
        <td><%= link_to 'Show', rental %></td>
        <td><%= link_to 'Edit', edit_rental_path(rental) %></td>
        <td><%= link_to 'Destroy', rental, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

